{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "module": "esnext",

    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,

    "jsx": "react",
    "jsxFactory": "h",

    "baseUrl": ".",
    "paths": {
      "/web_modules/*.js": [
        "node_modules/*",
        "web_modules/*.js"
      ]
    },

    "strictNullChecks": true
  }
}